<div class="col">
  <div class="row d-flex justify-content-center align-content-center">
    <div class="col-6">
      <div class="card border-primary mb-3">
        <div class="card-header text-center">Carga tu email</div>
        <div class="card-body">
          <form id="new-email-form" class="d-flex">
            <input
              id="email-input"
              type="email"
              class="form-control me-sm-2"
              placeholder="email@example.com"
              autocomplete="off"
            />
            <button
              id="new-message-btn"
              class="btn btn-primary my-2 my-sm-0"
              type="submit"
            >Enviar</button>
          </form>
          <p>Email ingresado:
            <strong id="user-email-display"></strong></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row d-flex justify-content-center align-content-center">
    <div class="col-6">
      <div class="card border-primary mb-3">
        <div class="card-header text-center">Centro de mensajes</div>
        <div class="card-body">
          <ul id="chat-messages" class="list-group"></ul>
          <form id="new-message-form" class="d-flex">
            <input
              id="new-message-input"
              class="form-control me-sm-2"
              type="text"
              placeholder="Mensaje"
              autocomplete="off"
            />
            <button
              id="new-message-btn"
              class="btn btn-primary my-2 my-sm-0"
              type="submit"
            >Enviar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>