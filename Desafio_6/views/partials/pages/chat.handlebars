<div class="col">
  <div class="row d-flex justify-content-center align-content-center">
    <div class="col">
      <div class="card border-primary mb-3">
        <div class="card-header text-center">Carga tu email</div>
        <div class="card-body">
          <div class="mb-3 row">
            <label
              for="staticEmail"
              class="col-sm-2 col-form-label"
            >Email</label>
            <div class="col">
              <input
                type="email"
                class="form-control"
                placeholder="email@example.com"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row d-flex justify-content-center align-content-center">
    <div class="col">
      <div class="card border-primary mb-3">
        <div class="card-header text-center">Centro de mensajes</div>
        <div class="card-body">
          <ul id="chat-messages" class="list-group"></ul>
          <form id="new-message-form" action="" class="d-flex">
            <input
              id="new-message-input"
              class="form-control me-sm-2"
              type="text"
              placeholder="Mensaje"
              autocomplete="off"
            />
            <button
              id="new-message-btn"
              class="btn btn-primary my-2 my-sm-0"
              type="submit"
            >Enviar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>