<html>
  <head>
    <meta charset="utf-8" />
    <title>e-commerce</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootswatch@5.1.3/dist/darkly/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
  </head>
  <body class="bg-dark text-white">
    <div class="container mt-5">
      <div class="row">
        <div class="col">
          <div class="card border-primary mb-3">
            <div class="card-header text-center"><strong>Formulario nuevo álbum</strong></div>
            <div class="card-body">
              <form id="new-album-form">
                <div class="mb-3">
                  <label for="album-artist" class="form-label">Artista</label>
                  <input
                    type="text"
                    class="form-control"
                    id="album-artist"
                    name="album-artist"
                  />
                </div>
                <div class="mb-3">
                  <label for="album-name" class="form-label">Álbum</label>
                  <input
                    type="text"
                    class="form-control"
                    id="album-name"
                    name="album-name"
                  />
                </div>
                <div class="mb-3">
                  <label for="album-price" class="form-label">Precio</label>
                  <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input
                      type="number"
                      class="form-control"
                      id="album-price"
                      name="album-price"
                      min="0"
                      step="0.01"
                    />
                  </div>
                </div>
                <div class="mb-3">
                  <label for="album-img" class="form-label">URL Imagen</label>
                  <input
                    type="text"
                    class="form-control"
                    id="album-img"
                    name="album-img"
                  />
                </div>
                <div class="mb-3">
                  <label for="album-release-year" class="form-label">Año de
                    lanzamiento</label>
                  <input
                    type="number"
                    class="form-control"
                    id="album-release-year"
                    name="album-release-year"
                    min="0"
                  />
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                  <button
                    class="btn btn-dark border border-light"
                    type="submit"
                  >
                    <strong>Submit</strong>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card border-primary mb-3">
            <div class="card-header text-center">Álbumes</div>
            <div class="card-body">
              <table class="table table-bordered text-white">
                <thead>
                  <tr class="text-center">
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto</th>
                    <th>Artista</th>
                    <th>Año de lanzamiento</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each albums}}
                    <tr class="text-center">
                      <td>{{this.name}}</td>
                      <td>{{this.price}}</td>
                      <td class="w-25 h-25">
                        <img
                          class="img-thumbnail"
                          src="{{this.img}}"
                          alt="{{this.name}}"
                        /></td>
                      <td>{{this.artist}}</td>
                      <td>{{this.release_year}}</td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <div class="card border-primary mb-3">
            <div class="card-header text-center">Carga tu email</div>
            <div class="card-body">
              <form id="new-email-form" class="d-flex">
                <input
                  id="email-input"
                  type="email"
                  class="form-control me-sm-2"
                  placeholder="email@example.com"
                  autocomplete="off"
                />
                <button
                  id="new-message-btn"
                  class="btn btn-primary my-2 my-sm-0"
                  type="submit"
                >Enviar</button>
              </form>
              <p>Email ingresado:
                <strong id="user-email-display"></strong></p>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="card border-primary mb-3">
            <div class="card-header text-center">Centro de mensajes</div>
            <div class="card-body">
              <ul id="chat-messages" class="list-group"></ul>
              <form id="new-message-form" class="d-flex">
                <input
                  id="new-message-input"
                  class="form-control me-sm-2"
                  type="text"
                  placeholder="Mensaje"
                  autocomplete="off"
                />
                <button
                  id="new-message-btn"
                  class="btn btn-primary my-2 my-sm-0"
                  type="submit"
                >Enviar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/toastify-js"
    ></script>
  </body>
</html>