body.bg-secondary
  .container.d-flex.justify-content-center.align-items-center.bg-secondary.vh-100
    .col-4
      .card.bg-dark.bg-gradient.text-white
        .card-header.bg-dark.text-center
          strong Agregar nuevo producto
        .card-body
          form(action="/productos", method="post") 
            .mb-3
              label.form-label(for='album-artist') Artista
              input#album-artist.form-control(type='text' name='album-artist')
            .mb-3
              label.form-label(for='album-name') &Aacute;lbum
              input#album-name.form-control(type='text' name='album-name')
            .mb-3
              label.form-label(for='album-price') Precio
              .input-group.mb-3
                span.input-group-text $
                input#album-price.form-control(type='number' name='album-price' min='0' step='0.01')
            .mb-3
              label.form-label(for='album-img') URL Imagen
              input#album-img.form-control(type='text' name='album-img')
            .mb-3
              label.form-label(for='album-release-year') A&ntilde;o de lanzamiento
              input#album-release-year.form-control(type='number' name='album-release-year' min='0')
            .d-grid.gap-2.col-6.mx-auto
              button.btn.btn-dark.border.border-light(type='submit')
                strong Submit

